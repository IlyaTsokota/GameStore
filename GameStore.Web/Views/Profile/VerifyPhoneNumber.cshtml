@model GameStore.Web.ViewModels.ProfileViewModels.VerifyPhoneNumberViewModel

@{
    ViewBag.Title = "Подтвердите номер телефона";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 bg-gray m-5 radius">
            <h2>@ViewBag.Title</h2>

            @using (Html.BeginForm("VerifyPhoneNumber", "Profile", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("phoneNumber", Model.PhoneNumber)
                <h5>@ViewBag.Status</h5>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <p>На Ваш телефон отправлено СМС с кодом. Введите его!</p>
                <div class="form-group">
                    @Html.LabelFor(m => m.Code, new { @class = "col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-primary" value="Отправить" />
                        @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
