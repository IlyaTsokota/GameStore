@model GameStore.Web.ViewModels.AccountViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
    <div class="auth">
        <div class="auth__header">
            <div class="auth__logo">
                <h1 class="text-white">Аккаунт / Регистрация</h1>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-10 col-sm-12 col-md-5 m-5">
                    <div class="auth__body">
                        <form class="auth__form" autocomplete="off">
                            <div class="auth__form_body">
                                <h3 class="auth__form_title text-center">Регистрация</h3>
                                <div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.FirstName, new { @class = "text-uppercase small " })
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Имя" })
                                        @Html.ValidationMessageFor(m => m.FirstName, string.Empty, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.MiddleName, new { @class = "text-uppercase small " })
                                        @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", placeholder = "Фамилия" })
                                        @Html.ValidationMessageFor(m => m.MiddleName, string.Empty, new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.LastName, new { @class = "text-uppercase small " })
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Отчество" })
                                        @Html.ValidationMessageFor(m => m.LastName, string.Empty, new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Phone, new { @class = "text-uppercase small " })
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "+380990481015" })
                                        @Html.ValidationMessageFor(m => m.Phone, string.Empty, new { @class = "text-danger" })


                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "text-uppercase small " })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email@example.com" })
                                        @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "text-uppercase small " })
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
                                        @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.PasswordConfirm, new { @class = "text-uppercase small " })
                                        @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control", placeholder = "Подтвердите пароль" })
                                        @Html.ValidationMessageFor(m => m.PasswordConfirm, string.Empty, new { @class = "text-danger" })

                                    </div>

                                </div>
                            </div>
                            <div class="auth__form_actions">
                                <button class="btn btn-primary btn-lg btn-block">
                                    Регистрация
                                </button>
                                <div class="mt-2 text-center">

                                    <p class="small text-uppercas">
                                        Уже зарегистрированы?
                                        <a href="@Url.Action("Login")">
                                            Войти
                                        </a>
                                    </p>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
}