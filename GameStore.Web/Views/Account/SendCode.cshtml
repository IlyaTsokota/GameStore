@model GameStore.Web.ViewModels.ProfileViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Отправка кода";
}

<div class="container">

    <div class="row justify-content-center  m-5">
        <div class="col-md-6  bg-gray radius">
            <h2 class="w-100 text-center">@ViewBag.Title</h2>
            @using (Html.BeginForm("SendCode", "Account", new { Model.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("rememberMe", Model.RememberMe)
                @Html.HiddenFor(m=>m.Email)
                <div class="col-12">
                    Выберите способ подтверждения:
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control" })
                    <input type="submit" value="Отправить" class="btn btn-primary my-1" />
                </div>

            }
        </div>
      
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}