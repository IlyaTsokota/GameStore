            <li class="nav-item">
                @Html.ActionLink("О сайте", "About", "Home", null, htmlAttributes: new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Контакты", "Contact", "Home", null, htmlAttributes: new { @class = "nav-link" })
            </li>

        </ul>
