
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

    <link href="~/Content/Error.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <h1>@Html.ActionLink("Games Store", "Index", "Home", null, htmlAttributes: new { @class = "logo" })</h1>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    @Html.ActionLink("О сайте", "About", "Home", null, htmlAttributes: new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Контакты", "Contact", "Home", null, htmlAttributes: new { @class = "nav-link" })
                </li>

            </ul>
         

            @Html.Partial("_LoginPartial")

        </div>
    </nav>

    <div class=" body-content container">
        <div class="row">

            @RenderSection("Menu", false)

            <div class="col col-md-10  ">
                @RenderBody()
            </div>

        </div>

        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Ilya Tsokota</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/cart")
    @RenderSection("scripts", required: false)
</body>
</html>
