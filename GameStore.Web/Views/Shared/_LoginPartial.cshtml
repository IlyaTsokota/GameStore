
@if (Request.IsAuthenticated)
{
    <ul class="navbar-nav list-info">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user"></i>
                Мой аккаунт
            </a>
            <div class="dropdown-menu dropdown-menu-right dropdown-default"
                 aria-labelledby="navbarDropdownMenuLink-333">
                <a class="dropdown-item" href="@Url.Action("Index", "Profile")">Профиль</a>
                <a class="dropdown-item" href="@Url.Action("Index", "Orders")">Мои заказы</a>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    @Html.ActionLink("Админ панель", "Index", new { area = "Admin", controller = "Order" }, htmlAttributes: new { title = "Manage", @class = "dropdown-item" })
                }
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">Выйти</a>
                }
            </div>
        </li>
    </ul>

}
else
{
    <ul class="navbar-nav list-info">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Account")"><i class="fa fa-user mr-1"></i>Вход в личный кабинет</a>
        </li>
    </ul>
}
