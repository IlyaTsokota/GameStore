@using GameStore.Web.Helpers
@model GameStore.Web.Areas.Admin.ViewModels.UserViewModels.IndexUserViewModel

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().IsBlocked)
        </th>
        <th class="text-right">Действие</th>
    </tr>

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (item.IsBlocked)
                {
                    <text>Да</text>
                }
                else
                {
                    <text>Нет</text>
                }
            </td>
            <td class="text-right">
                @Html.ActionLink("Подробности", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>

@Html.PaginationAjax(Model.Pager)
