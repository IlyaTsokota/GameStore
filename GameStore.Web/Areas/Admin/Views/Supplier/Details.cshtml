@model GameStore.Web.Areas.Admin.ViewModels.SupplierViewModels.DetailsSupplierViewModel
@{
    ViewBag.Title = "Детальнее о поставщике: " + Model.Name;
}
<div class="d-flex justify-content-between align-items-center my-3">
    <h2>@ViewBag.Title</h2>
</div>
<div class="col">
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            Удален?
        </dt>


        <dd>
            @if (Model.IsDeleted)
            {
                <text>Да</text>
            }
            else
            {
                <text>Нет</text>
            }
        </dd>

    </dl>
</div>
<div class="form-group">
    <div class="col-md-12">
        @Html.ActionLink("Изменить", "Edit", new { id = Model.SupplierId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
