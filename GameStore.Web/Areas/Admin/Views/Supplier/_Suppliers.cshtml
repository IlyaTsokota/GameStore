
@model GameStore.Web.Areas.Admin.ViewModels.SupplierViewModels.IndexSupplierViewModel
@using GameStore.Web.Helpers


<table class="table table-hover ">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Suppliers.FirstOrDefault().Name)</th>


            <th>@Html.DisplayNameFor(model => model.Suppliers.FirstOrDefault().Phone)</th>

            <th class="text-right">Действия</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Suppliers)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Phone</td>
                <td class="text-right">

                    @Html.ActionLink("Детальнее", "Details", "Supplier", new { id = item.SupplierId }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Изменить", "Edit", "Supplier", new { id = item.SupplierId }, htmlAttributes: new { @class = "btn btn-primary" })
                    @if (item.IsDeleted)
                    {
                        @Html.ActionLink("Восстановить", "Restore", "Supplier", new { id = item.SupplierId }, htmlAttributes: new { @class = "btn btn-warning" })
                    }
                    else
                    {
                        @Html.ActionLink("Удалить", "Delete", "Supplier", new { id = item.SupplierId }, htmlAttributes: new { @class = "btn btn-danger" })
                    }

                </td>
            </tr>
        }
    </tbody>


</table>
<div>
    @Html.PaginationAjax(Model.Pager)
</div>

