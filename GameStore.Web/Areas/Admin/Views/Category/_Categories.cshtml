@model GameStore.Web.Areas.Admin.ViewModels.CategoryViewModels.IndexCategoryViewModel
@using GameStore.Web.Helpers
<table class="table table-hover ">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Categories.FirstOrDefault().Name)</th>


            <th>@Html.DisplayNameFor(model => model.Categories.FirstOrDefault().Image)</th>

            <th class="text-right">Действия</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item.Name</td>
                <td><img src="data:image/jpeg;base64, @Convert.ToBase64String(item.Image)" alt="@item.Name" class="img-fluid " style="width: 200px; height: 200px;"/></td>
                <td class="text-right">
                    @Html.ActionLink("Изменить", "Edit", "Category", new { id = item.CategoryId }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("Атрибуты", "Index", "Attribute", new { categoryId = item.CategoryId }, new { @class = "btn btn-secondary" })

                </td>
            </tr>
        }
    </tbody>


</table>
<div>
    @Html.PaginationAjax(Model.Pager)
</div>

